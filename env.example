# ===========================================
# Starlight Network Monitor - Environment Variables
# ===========================================
# Copy this file to .env and update the values
# Or simply run ./start.sh to auto-generate secure values

# Backend Configuration
NODE_ENV=development
PORT=4000

# Authentication Configuration
AUTH_ADMIN_PASSWORD=changeme
AUTH_SESSION_SECRET=change-this-to-a-random-string-in-production

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://starlight:starlight@localhost:5432/starlight_db
POSTGRES_USER=starlight
POSTGRES_PASSWORD=starlight
POSTGRES_DB=starlight_db

# MQTT Broker Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=
MQTT_PASSWORD=

# Frontend Configuration
VITE_API_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:4000

# Internet Connectivity Check (used by probes)
# These are default targets for internet connectivity checks
INTERNET_CHECK_TARGETS=8.8.8.8,1.1.1.1,208.67.222.222

# Probe Timeout (in milliseconds)
PROBE_TIMEOUT=5000

# Status History Retention (in days)
STATUS_HISTORY_RETENTION_DAYS=30





